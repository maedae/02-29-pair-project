<center><h1>Sign In</h1></center>


<% if @invalid_password == true %>
  <font color="red"><b>Invalid password.</b></font>
<% end %>

<form  method="POST" action="/login/confirmation">

<input class="form-control m-b" placeholder="email address"  name="email" value="<%= params[:email] %>">
<input class="form-control m-b" type="password" name="password" placeholder="Create a Password">
<p><input type="submit" value="Login"></p>

<p> <a href="/forgot_password"> Forgot Password </a></p>
<a href="/create_account"> Create New Account </a>