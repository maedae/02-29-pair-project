<center><h1> <%= @item.title %> </h1>  </center>

<%= @item.get_condition_tag %> <br>
<%= @item.description %> <br>
<br>
<% if @creator != nil %>
Created by:<%= @creator.name %> on <%= @room.created_at.strftime("%m/%d/%Y") %><br>
<% end %>
<% if @editor != nil %>
Updated by:<%= @editor.name %> on <%= @room.updated_at.strftime("%m/%d/%Y") %>
<% end %>
<br>
<br>
<a href="/buildings/<%= @building.id %>/rooms/<%= @room.id %>/features/<%= @item.id %>/add_photo"> Add Image </a>
<br>
<br>
<a href="/buildings/<%= @building.id %>/rooms/<%= @room.id %>/features/<%= @item.id %>/images/delete"> Delete Images </a>
<br>
<br>
<br>
<h3> IMAGES </h3>
<% if @no_photos == true %>
  There are currently no images for <%= @item.title %>
<% else %>
  <% @photos.each do |photo| %>
  <A HREF="/buildings/<%= @building.id%>/rooms/<%= @room.id %>/features/<%= @item.id %>/images/<%= photo.id %>">
  <IMG style="height: 250px;" SRC="<%= photo.image %>"></A><br>
  <% end %>
<% end %>


